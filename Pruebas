local buttonNames = {"Elerium", "Fluent", "Dr-ray", "Pack Farm"}
local scripts = {
    [1] = [[
        loadstring(game:HttpGet("https://raw.githubusercontent.com/CoronaBlanca/25092009ML/refs/heads/main/Elerium-V5"))()("Sherya Scripts: Script 1 ejecutado")
    ]],
    [2] = [[
        loadstring(game:HttpGet("https://raw.githubusercontent.com/CoronaBlanca/25092009ML/refs/heads/main/FLUENT"))()("Sherya Scripts: Script 2 ejecutado")
    ]],
    [3] = [[
        loadstring(game:HttpGet("https://raw.githubusercontent.com/CoronaBlanca/25092009ML/refs/heads/main/Dr-Ray"))()("Sherya Scripts: Script 3 ejecutado")
    ]],
    [4] = [[
        loadstring(game:HttpGet("https://raw.githubusercontent.com/CoronaBlanca/25092009ML/refs/heads/main/Farm-Packs"))()("Sherya Scripts: Script 4 ejecutado")
    ]],
}

local TweenService = game:GetService("TweenService")
local Players = game:GetService("Players")

-- üé® Paleta de colores
local mainPurple = Color3.fromRGB(138, 43, 226)   -- morado base
local neonPurple = Color3.fromRGB(186, 85, 211)   -- morado ne√≥n
local darkPurple = Color3.fromRGB(75, 0, 130)     -- morado oscuro

-- üìå GUI
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "SheryaScriptsUI"
ScreenGui.ResetOnSpawn = false
ScreenGui.Parent = game:GetService("CoreGui")

local BlurFrame = Instance.new("Frame")
BlurFrame.Parent = ScreenGui
BlurFrame.Size = UDim2.new(1, 0, 1, 0)
BlurFrame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
BlurFrame.BackgroundTransparency = 0.3
BlurFrame.BorderSizePixel = 0

local MainFrame = Instance.new("Frame")
MainFrame.Parent = ScreenGui
MainFrame.Name = "MainFrame"
MainFrame.AnchorPoint = Vector2.new(0.5, 0.5)
MainFrame.Position = UDim2.new(0.5, 0, 0.5, 0)
MainFrame.Size = UDim2.new(0, 400, 0, 320)
MainFrame.BackgroundColor3 = mainPurple
MainFrame.BorderSizePixel = 0
MainFrame.Active = true

local MainCorner = Instance.new("UICorner")
MainCorner.Parent = MainFrame
MainCorner.CornerRadius = UDim.new(0, 25)

local Gradient = Instance.new("UIGradient")
Gradient.Parent = MainFrame
Gradient.Color = ColorSequence.new{
    ColorSequenceKeypoint.new(0, darkPurple),
    ColorSequenceKeypoint.new(0.5, mainPurple),
    ColorSequenceKeypoint.new(1, neonPurple)
}
Gradient.Rotation = 135

local GlowStroke = Instance.new("UIStroke")
GlowStroke.Parent = MainFrame
GlowStroke.Color = neonPurple
GlowStroke.Thickness = 4
GlowStroke.Transparency = 0.2
TweenService:Create(GlowStroke, TweenInfo.new(2, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut, -1, true), {
    Thickness = 6,
    Transparency = 0.6,
    Color = darkPurple
}):Play()

-- ‚ú® Part√≠culas m√°gicas cayendo
local function createFallingSparkle(parent)
    local sparkle = Instance.new("TextLabel")
    sparkle.Parent = parent
    sparkle.Size = UDim2.new(0, 20, 0, 20)
    sparkle.Position = UDim2.new(math.random(), 0, -0.1, 0)
    sparkle.BackgroundTransparency = 1
    sparkle.Text = "‚ú®"
    sparkle.TextColor3 = Color3.fromRGB(255, 255, 255)
    sparkle.TextSize = 16
    sparkle.Font = Enum.Font.Gotham

    local fallTween = TweenService:Create(sparkle, TweenInfo.new(3, Enum.EasingStyle.Linear), {
        Position = UDim2.new(sparkle.Position.X.Scale, 0, 1.1, 0),
        Rotation = math.random(-180, 180),
        TextTransparency = 1,
        Size = UDim2.new(0, math.random(10,25), 0, math.random(10,25))
    })
    fallTween:Play()

    fallTween.Completed:Connect(function()
        sparkle:Destroy()
    end)
end

task.spawn(function()
    while task.wait(0.4) do
        if MainFrame.Parent then
            createFallingSparkle(MainFrame)
        else
            break
        end
    end
end)

-- ‚ùå Bot√≥n de cerrar
local CloseBtn = Instance.new("TextButton")
CloseBtn.Parent = MainFrame
CloseBtn.Size = UDim2.new(0, 35, 0, 35)
CloseBtn.Position = UDim2.new(1, -45, 0, 10)
CloseBtn.BackgroundColor3 = Color3.fromRGB(40, 0, 60)
