                        local character = player.Character or player.CharacterAdded:Wait()
                        local egg = backpack:FindFirstChild("Protein Egg")
                        if egg then
                            egg.Parent = character
                            pcall(function() egg:Activate() end)
                        end
                    end)
                end
            end)
        end
    end,
})

